<div class="flex flex-row">
    <div class="flex flex-col w-1/12">

    </div>
    <div class="flex flex-col w-10/12 mx-auto mt-10">
        <h3 class="font-bold mx-auto">
            <%= app_name %>
        </h3>
        <div class="mx-auto mt-2 opacity-50 text-xs text-zinc-400">
            @<%= app_version %>
        </div>
    </div>
    <div class="flex flex-col w-1/12 mx-auto mt-10">
        <% if city %>
            <a class="font-bold text-xs text-blue-600" href="/maps/city/<%= city.name_slug %>">
                map view
            </a>
        <% end %>
    </div>
</div>

<div class="flex flex-row mx-auto mt-10">
    <div class="w-1/12"></div>
    <div class="w-1/3 font-bold text-xs">
        <input type="search" name="q" placeholder="<%= query_example %>" value="<%= query %>" autocomplete="off" hx-get="<%= places_path %>" hx-target="#places-table" hx-trigger="input changed delay:500ms, search" class="peer px-0 h-full w-full border-b bg-transparent pt-4 pb-1.5 font-sans font-normal text-blue-gray-700 outline outline-0 transition-all placeholder-shown:border-blue-gray-200 focus:border-pink-600 focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50">
    </div>
    <div class="w-2/12"></div>
    <div class="w-1/3 font-bold text-xs">
        <input type="search" name="q" placeholder="mapbox search" value="" autocomplete="off" hx-get="" hx-target="#places-table" hx-trigger="input changed delay:500ms, search" class="peer px-0 h-full w-full border-b bg-transparent pt-4 pb-1.5 font-sans font-normal text-blue-gray-700 outline outline-0 transition-all placeholder-shown:border-blue-gray-200 focus:border-pink-600 focus:outline-0 disabled:border-0 disabled:bg-blue-gray-50">
    </div>
    <%# <div class="col-start-11 col-span-1 font-normal text-xs">
        <a href="/places/mapbox">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="my-2 float-right size-5 text-blue-600">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 9a.75.75 0 0 0-1.5 0v2.25H9a.75.75 0 0 0 0 1.5h2.25V15a.75.75 0 0 0 1.5 0v-2.25H15a.75.75 0 0 0 0-1.5h-2.25V9Z" clip-rule="evenodd" />
            </svg>
        </a>
    </div> %>
</div>

<div class="flex flex-col mx-auto" id="places-table">
    <%= render "places/list_table", locals: {
        city: city, places_count: places_count, places_list: places_list, places_path: places_path, query: query, tags_list: tags_list
    } %>
</div>
