<div class="flex flex-row">
    <div class="w-1/12">
        <div class="flex flex-col mx-auto mt-10 ml-20">
            <a href="/trains" class="font-bold text-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd" d="M18 10a.75.75 0 0 1-.75.75H4.66l2.1 1.95a.75.75 0 1 1-1.02 1.1l-3.5-3.25a.75.75 0 0 1 0-1.1l3.5-3.25a.75.75 0 1 1 1.02 1.1l-2.1 1.95h12.59A.75.75 0 0 1 18 10Z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </div>
    <div class="w-10/12">
        <div class="flex flex-col mx-auto mt-10">
            <h3 class="font-bold mx-auto">
                <%= app_name %>
            </h3>
            <div class="mx-auto mt-2 opacity-50 text-xs text-zinc-400">
                @<%= app_version %>
            </div>
        </div>
    </div>
</div>

<form hx-get="#{request_path}" hx-target="#paths-table">
    <div class="flex flex-row mx-auto mt-10">
        <div class="w-1/12"></div>
        <div class="w-2/12 font-normal text-xs mr-5">
            <select id="city-from" name="city_from" class="block px-0 pt-4 pb-1.5 w-full text-xs text-gray-400 bg-transparent border-0 border-b border-gray-200 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer disabled:border-0 disabled:bg-blue-gray-50">
                <option disable selected value="">from</option>
                <% for city_name in city_names %>
                    <option value="<%= city_name.slugify %>"><%= city_name %></option>
                <% end %>
            </select>
        </div>
        <div class="w-1/12 font-normal text-xs ml-5">
            <select id="max-changes" name="max_changes" class="block px-0 pt-4 pb-1.5 w-full text-xs text-gray-400 bg-transparent border-0 border-b border-gray-200 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer disabled:border-0 disabled:bg-blue-gray-50">
                <option disable selected value=-1>max changes</option>
                <% for i in [0, 1, 2, 3] %>
                    <option value="<%= i %>"><%= i %></option>
                <% end %>
            </select>
        </div>
        <div class="w-1/12 font-normal text-xs ml-20 mt-2">
            <button type="submit" class="px-2 py-2 font-semibold place-self-center text-xs bg-blue-700 text-white rounded shadow-sm">
                Search
            </button>
        </div>
    </div>
</form>

<div class="flex flex-col mx-auto" id="paths-table">
</div>
