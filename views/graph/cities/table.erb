<div class="col-start-2 col-span-10 mx-4 font-normal text-blue-400 text-xs">
  query '<%= query %>' : results <%= cities.length %>
</div>

<table class="col-start-2 col-span-10 my-5">
  <thead class="font-normal text-left text-[0.8125rem] leading-6 text-zinc-800">
    <tr>
      <th class="p-4 pr-6">name</th>
      <th class="p-4 pr-6">country</th>
      <th class="p-4 pr-6"></th>
    </tr>
  </thead>
  <tbody>
    <% cities.each do |city| %>
      <tr class="group hover:bg-zinc-50 odd:bg-white even:bg-slate-50 text-sm">
        <td class="p-4 pr-6 font-normal"><%= city.name %></td>
        <td class="p-4 pr-6 font-normal"><%= city.data.dig("address", "country") %></td>
      </tr>
    <% end %>    
  </tbody>
</table>
