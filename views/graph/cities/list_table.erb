<div class="flex flex-row mt-5">
    <div class="w-1/12"></div>
    <div class="font-normal text-xs">
        query '<%= query %>', results <%= cities.length %>
    </div>
</div>

<div class="flex flex-row mt-5">
    <div class="w-1/12"></div>
    <table class="w-10/12 mt-5">
        <thead class="font-normal text-center text-xs leading-6 text-zinc-800">
            <tr>
            <th class="p-4">name</th>
            <th class="p-4">country</th>
            <th class="p-4"></th>
            </tr>
        </thead>
        <tbody>
            <% cities.each do |city| %>
            <tr class="group hover:bg-zinc-50 odd:bg-white even:bg-slate-50 text-center text-xs">
                <td class="p-4 font-normal"><%= city.name %></td>
                <td class="p-4 font-normal"><%= city.data.dig("address", "country") %></td>
            </tr>
            <% end %>    
        </tbody>
    </table>
</div>
