<div class="col-start-2 col-span-10 mx-4 font-normal text-blue-400 text-xs">
  query '<%= query %>' : results <%= paths.length %>
</div>

<table class="col-start-2 col-span-10 mt-10">
  <thead class="font-normal text-center text-xs leading-6 text-zinc-800">
    <tr>
      <th class="p-4">source</th>
      <th class="p-4">destination</th>
      <th class="p-4">duration</th>
      <th class="p-4 text-left">route</th>
    </tr>
  </thead>
  <tbody>
    <% paths.each do |path_object| %>
      <tr class="group hover:bg-zinc-50 odd:bg-white even:bg-slate-50 text-center text-xs">
        <td class="p-4 font-normal"><%= path_object[:src_name] %></td>
        <td class="p-4 font-normal"><%= path_object[:dst_name] %></td>
        <td class="p-4 font-normal"><%= path_object[:path_duration] %></td>
        <td class="p-4 font-normal text-left"><%= path_object[:path_name] %></td>
      </tr>
    <% end %>    
  </tbody>
</table>
